{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dotnet-controllers.artifact.schema.json",
  "title": ".NET Controllers Artifact Schema",
  "description": "Schema for dotnet-controllers artifact type generated by @dotnet-specialist",
  "type": "object",
  "required": [
    "artifact_id",
    "artifact_type",
    "metadata",
    "content",
    "validation"
  ],
  "properties": {
    "artifact_id": {
      "type": "string",
      "pattern": "^artifact-dotnet-",
      "description": "Unique artifact identifier"
    },
    "artifact_type": {
      "type": "string",
      "const": "dotnet-controllers",
      "description": "Must be 'dotnet-controllers'"
    },
    "artifact_version": {
      "type": "string",
      "default": "1.0"
    },
    "metadata": {
      "type": "object",
      "required": ["phase", "agent_id", "created_at", "project_id"],
      "properties": {
        "phase": {
          "type": "integer",
          "const": 14
        },
        "agent_id": {
          "type": "string",
          "const": "@dotnet-specialist"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "project_id": {
          "type": "string",
          "pattern": "^proj-"
        },
        "status": {
          "type": "string",
          "enum": ["active", "deprecated", "archived"]
        }
      }
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "artifact_id": {
                "type": "string"
              },
              "artifact_type": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "content": {
      "type": "object",
      "required": ["controllers"],
      "properties": {
        "controllers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "file_path", "code"],
            "properties": {
              "name": {
                "type": "string",
                "pattern": ".*Controller$"
              },
              "file_path": {
                "type": "string",
                "pattern": ".*\\.cs$"
              },
              "code": {
                "type": "string",
                "minLength": 100
              },
              "endpoints": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "method_name": {
                      "type": "string"
                    },
                    "http_method": {
                      "type": "string"
                    },
                    "route": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "services": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "file_path": {
                "type": "string"
              },
              "code": {
                "type": "string"
              }
            }
          }
        },
        "entities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "file_path": {
                "type": "string"
              },
              "code": {
                "type": "string"
              }
            }
          }
        },
        "generated_files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "validation": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["passed", "passed_with_warnings", "failed"]
        },
        "compilation_errors": {
          "type": "integer",
          "minimum": 0
        },
        "tests_passing": {
          "type": "boolean"
        },
        "coverage_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "quality_metrics": {
      "type": "object",
      "properties": {
        "total_lines": {
          "type": "integer"
        },
        "controller_count": {
          "type": "integer"
        },
        "service_count": {
          "type": "integer"
        },
        "endpoint_count": {
          "type": "integer"
        }
      }
    }
  }
}
