{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sql-schema.artifact.schema.json",
  "title": "SQL Schema Artifact Schema",
  "description": "Schema for sql-schema artifact type generated by @database-specialist",
  "type": "object",
  "required": [
    "artifact_id",
    "artifact_type",
    "metadata",
    "content",
    "validation"
  ],
  "properties": {
    "artifact_id": {
      "type": "string",
      "pattern": "^artifact-sql-",
      "description": "Unique artifact identifier"
    },
    "artifact_type": {
      "type": "string",
      "const": "sql-schema",
      "description": "Must be 'sql-schema'"
    },
    "artifact_version": {
      "type": "string",
      "default": "1.0"
    },
    "metadata": {
      "type": "object",
      "required": ["phase", "agent_id", "created_at", "project_id"],
      "properties": {
        "phase": {
          "type": "integer",
          "const": 15
        },
        "agent_id": {
          "type": "string",
          "const": "@database-specialist"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "project_id": {
          "type": "string",
          "pattern": "^proj-"
        },
        "status": {
          "type": "string",
          "enum": ["active", "deprecated", "archived"]
        }
      }
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "artifact_id": {
                "type": "string"
              },
              "artifact_type": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "content": {
      "type": "object",
      "required": ["tables"],
      "properties": {
        "database_system": {
          "type": "string",
          "enum": ["SQL Server", "PostgreSQL", "MySQL", "Oracle", "SQLite"]
        },
        "tables": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "ddl_script"],
            "properties": {
              "name": {
                "type": "string"
              },
              "schema": {
                "type": "string"
              },
              "ddl_script": {
                "type": "string",
                "minLength": 50
              },
              "file_path": {
                "type": "string",
                "pattern": ".*\\.sql$"
              },
              "columns": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "data_type": {
                      "type": "string"
                    },
                    "nullable": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        },
        "indexes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "table": {
                "type": "string"
              },
              "ddl_script": {
                "type": "string"
              }
            }
          }
        },
        "migrations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "up_script": {
                "type": "string"
              },
              "down_script": {
                "type": "string"
              }
            }
          }
        },
        "generated_files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "validation": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["passed", "passed_with_warnings", "failed"]
        },
        "syntax_errors": {
          "type": "integer",
          "minimum": 0
        },
        "foreign_key_integrity": {
          "type": "boolean"
        },
        "index_coverage_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "performance_analysis": {
      "type": "object",
      "properties": {
        "total_tables": {
          "type": "integer"
        },
        "total_indexes": {
          "type": "integer"
        },
        "estimated_database_size_mb": {
          "type": "number"
        }
      }
    }
  }
}
