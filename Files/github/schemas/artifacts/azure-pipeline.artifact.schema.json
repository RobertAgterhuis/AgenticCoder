{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "azure-pipeline.artifact.schema.json",
  "title": "Azure Pipeline Artifact Schema",
  "description": "Schema for azure-pipeline artifact type generated by @azure-devops-specialist",
  "type": "object",
  "required": [
    "artifact_id",
    "artifact_type",
    "metadata",
    "content",
    "validation"
  ],
  "properties": {
    "artifact_id": {
      "type": "string",
      "pattern": "^artifact-azure-pipeline-",
      "description": "Unique artifact identifier"
    },
    "artifact_type": {
      "type": "string",
      "const": "azure-pipeline",
      "description": "Must be 'azure-pipeline'"
    },
    "artifact_version": {
      "type": "string",
      "default": "1.0"
    },
    "metadata": {
      "type": "object",
      "required": ["phase", "agent_id", "created_at", "project_id"],
      "properties": {
        "phase": {
          "type": "integer",
          "const": 16
        },
        "agent_id": {
          "type": "string",
          "const": "@azure-devops-specialist"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "project_id": {
          "type": "string",
          "pattern": "^proj-"
        },
        "status": {
          "type": "string",
          "enum": ["active", "deprecated", "archived"]
        }
      }
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "artifact_id": {
                "type": "string"
              },
              "artifact_type": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "content": {
      "type": "object",
      "required": ["pipeline_name", "yaml_content", "stages"],
      "properties": {
        "pipeline_name": {
          "type": "string"
        },
        "yaml_content": {
          "type": "string",
          "minLength": 100
        },
        "file_path": {
          "type": "string",
          "pattern": ".*\\.ya?ml$"
        },
        "trigger": {
          "type": "object",
          "properties": {
            "branches": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "pr_trigger_enabled": {
              "type": "boolean"
            }
          }
        },
        "stages": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "display_name": {
                "type": "string"
              },
              "jobs": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "steps_count": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        },
        "environments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "approval_required": {
                "type": "boolean"
              }
            }
          }
        },
        "quality_gates": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "threshold": {
                "type": "number"
              }
            }
          }
        },
        "generated_files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "validation": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["passed", "passed_with_warnings", "failed"]
        },
        "yaml_syntax_valid": {
          "type": "boolean"
        },
        "task_references_valid": {
          "type": "boolean"
        },
        "environments_configured": {
          "type": "boolean"
        },
        "quality_gates_defined": {
          "type": "boolean"
        }
      }
    },
    "pipeline_metrics": {
      "type": "object",
      "properties": {
        "total_stages": {
          "type": "integer"
        },
        "total_jobs": {
          "type": "integer"
        },
        "total_steps": {
          "type": "integer"
        },
        "yaml_lines": {
          "type": "integer"
        }
      }
    }
  }
}
