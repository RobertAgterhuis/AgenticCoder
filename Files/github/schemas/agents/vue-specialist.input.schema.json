{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agenticcoder.dev/schemas/agents/vue-specialist.input.schema.json",
  "title": "Vue.js Specialist Agent Input Schema",
  "description": "Input schema for the Vue.js Specialist agent that generates Vue 3 frontend applications",
  "type": "object",
  "required": [
    "application_requirements",
    "api_specification",
    "ui_requirements"
  ],
  "properties": {
    "application_requirements": {
      "type": "object",
      "description": "Core application requirements and features",
      "required": ["application_type", "features"],
      "properties": {
        "application_type": {
          "type": "string",
          "enum": ["spa", "pwa", "ssr"],
          "description": "Type of Vue application to generate"
        },
        "features": {
          "type": "array",
          "description": "List of application features to implement",
          "items": {
            "type": "string",
            "examples": [
              "authentication",
              "dashboard",
              "user-management",
              "real-time-updates",
              "file-upload",
              "notifications"
            ]
          },
          "minItems": 1
        },
        "target_browsers": {
          "type": "array",
          "description": "Target browsers for compatibility",
          "items": {
            "type": "string",
            "enum": ["chrome", "firefox", "safari", "edge"]
          },
          "default": ["chrome", "firefox", "safari", "edge"]
        },
        "accessibility_level": {
          "type": "string",
          "enum": ["WCAG-A", "WCAG-AA", "WCAG-AAA"],
          "description": "WCAG accessibility compliance level",
          "default": "WCAG-AA"
        },
        "internationalization": {
          "type": "boolean",
          "description": "Whether to support multiple languages",
          "default": false
        },
        "supported_languages": {
          "type": "array",
          "description": "Languages to support (if internationalization enabled)",
          "items": {
            "type": "string",
            "examples": ["en", "nl", "fr", "de"]
          }
        }
      }
    },
    "api_specification": {
      "type": "object",
      "description": "Backend API specification for integration",
      "required": ["base_url", "endpoints"],
      "properties": {
        "base_url": {
          "type": "string",
          "format": "uri",
          "description": "Base URL for the API",
          "examples": ["https://api.example.com", "http://localhost:5000"]
        },
        "endpoints": {
          "type": "array",
          "description": "List of API endpoints to integrate",
          "items": {
            "type": "object",
            "required": ["path", "method"],
            "properties": {
              "path": {
                "type": "string",
                "description": "API endpoint path",
                "examples": ["/api/users", "/api/auth/login"]
              },
              "method": {
                "type": "string",
                "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"],
                "description": "HTTP method"
              },
              "request_type": {
                "type": "string",
                "description": "TypeScript type for request body"
              },
              "response_type": {
                "type": "string",
                "description": "TypeScript type for response",
                "examples": ["User", "User[]", "PaginatedResponse<User>"]
              },
              "requires_auth": {
                "type": "boolean",
                "description": "Whether endpoint requires authentication",
                "default": false
              }
            }
          },
          "minItems": 1
        },
        "authentication": {
          "type": "object",
          "description": "Authentication configuration",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["bearer", "oauth2", "api-key", "cookie"],
              "description": "Authentication type"
            },
            "token_storage": {
              "type": "string",
              "enum": ["localStorage", "sessionStorage", "cookie"],
              "description": "Where to store auth token",
              "default": "localStorage"
            },
            "refresh_enabled": {
              "type": "boolean",
              "description": "Whether to implement token refresh",
              "default": false
            }
          }
        }
      }
    },
    "ui_requirements": {
      "type": "object",
      "description": "UI/UX requirements and design system",
      "properties": {
        "design_system": {
          "type": "string",
          "enum": ["custom", "vuetify", "element-plus", "naive-ui", "primevue", "quasar"],
          "description": "UI component library to use",
          "default": "custom"
        },
        "theme": {
          "type": "object",
          "description": "Theme configuration",
          "properties": {
            "primary_color": {
              "type": "string",
              "description": "Primary theme color (hex)",
              "pattern": "^#[0-9A-Fa-f]{6}$",
              "examples": ["#42b883", "#1976d2"]
            },
            "secondary_color": {
              "type": "string",
              "description": "Secondary theme color (hex)",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "dark_mode": {
              "type": "boolean",
              "description": "Whether to support dark mode",
              "default": false
            },
            "dark_mode_toggle": {
              "type": "boolean",
              "description": "Allow users to toggle dark mode",
              "default": false
            }
          }
        },
        "responsive_breakpoints": {
          "type": "object",
          "description": "Responsive design breakpoints",
          "properties": {
            "mobile": {
              "type": "string",
              "description": "Mobile breakpoint",
              "default": "640px"
            },
            "tablet": {
              "type": "string",
              "description": "Tablet breakpoint",
              "default": "768px"
            },
            "desktop": {
              "type": "string",
              "description": "Desktop breakpoint",
              "default": "1024px"
            },
            "wide": {
              "type": "string",
              "description": "Wide screen breakpoint",
              "default": "1280px"
            }
          }
        },
        "css_framework": {
          "type": "string",
          "enum": ["scss", "tailwindcss", "postcss", "none"],
          "description": "CSS framework/preprocessor to use",
          "default": "scss"
        }
      }
    },
    "state_management": {
      "type": "object",
      "description": "State management configuration",
      "properties": {
        "library": {
          "type": "string",
          "enum": ["pinia", "vuex", "composables-only"],
          "description": "State management library",
          "default": "pinia"
        },
        "persistence": {
          "type": "object",
          "description": "State persistence configuration",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether to persist state",
              "default": false
            },
            "storage": {
              "type": "string",
              "enum": ["localStorage", "sessionStorage", "indexedDB"],
              "description": "Storage mechanism",
              "default": "localStorage"
            },
            "keys": {
              "type": "array",
              "description": "Store keys to persist",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "build_configuration": {
      "type": "object",
      "description": "Build and deployment configuration",
      "properties": {
        "build_tool": {
          "type": "string",
          "enum": ["vite", "webpack"],
          "description": "Build tool to use",
          "default": "vite"
        },
        "target": {
          "type": "string",
          "enum": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "esnext"],
          "description": "JavaScript target version",
          "default": "es2020"
        },
        "output_dir": {
          "type": "string",
          "description": "Build output directory",
          "default": "dist"
        },
        "public_path": {
          "type": "string",
          "description": "Public path for assets",
          "default": "/"
        },
        "source_map": {
          "type": "boolean",
          "description": "Generate source maps",
          "default": true
        },
        "env_files": {
          "type": "array",
          "description": "Environment files to use",
          "items": {
            "type": "string"
          },
          "default": [".env", ".env.local", ".env.production"]
        }
      }
    },
    "testing_requirements": {
      "type": "object",
      "description": "Testing configuration",
      "properties": {
        "unit_tests": {
          "type": "boolean",
          "description": "Generate unit tests",
          "default": true
        },
        "test_framework": {
          "type": "string",
          "enum": ["vitest", "jest"],
          "description": "Testing framework",
          "default": "vitest"
        },
        "coverage_threshold": {
          "type": "number",
          "description": "Minimum code coverage percentage",
          "minimum": 0,
          "maximum": 100,
          "default": 80
        },
        "e2e_tests": {
          "type": "boolean",
          "description": "Include E2E test setup",
          "default": false
        },
        "e2e_framework": {
          "type": "string",
          "enum": ["playwright", "cypress"],
          "description": "E2E testing framework"
        }
      }
    },
    "performance_requirements": {
      "type": "object",
      "description": "Performance optimization requirements",
      "properties": {
        "lazy_loading": {
          "type": "boolean",
          "description": "Enable lazy loading for routes",
          "default": true
        },
        "code_splitting": {
          "type": "boolean",
          "description": "Enable code splitting",
          "default": true
        },
        "pwa": {
          "type": "boolean",
          "description": "Configure as Progressive Web App",
          "default": false
        },
        "service_worker": {
          "type": "boolean",
          "description": "Include service worker",
          "default": false
        }
      }
    },
    "additional_packages": {
      "type": "array",
      "description": "Additional npm packages to include",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Package name",
            "examples": ["axios", "date-fns", "lodash-es"]
          },
          "version": {
            "type": "string",
            "description": "Package version",
            "examples": ["^1.6.0", "~2.30.0"]
          },
          "dev": {
            "type": "boolean",
            "description": "Whether it's a dev dependency",
            "default": false
          }
        }
      }
    }
  },
  "additionalProperties": false
}
