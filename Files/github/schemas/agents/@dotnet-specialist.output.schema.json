{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenticcoder.com/schemas/agents/@dotnet-specialist.output.schema.json",
  "title": "@dotnet-specialist Agent Output Schema",
  "description": "Output contract for the @dotnet-specialist agent (.NET Backend Implementation)",
  "type": "object",
  "required": ["phase", "status", "artifacts"],
  "properties": {
    "phase": {
      "type": "integer",
      "const": 14,
      "description": "Execution phase"
    },
    "status": {
      "type": "string",
      "enum": ["success", "partial", "failed"],
      "description": "Execution status"
    },
    "artifacts": {
      "type": "object",
      "required": ["controllers", "services", "entities"],
      "properties": {
        "controllers": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "path", "base_route"],
            "properties": {
              "name": { "type": "string" },
              "path": { "type": "string" },
              "base_route": { "type": "string" },
              "actions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "method": { "type": "string" },
                    "route": { "type": "string" },
                    "name": { "type": "string" }
                  }
                }
              }
            }
          },
          "description": "Generated ASP.NET Core controllers"
        },
        "services": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "path"],
            "properties": {
              "name": { "type": "string" },
              "path": { "type": "string" },
              "interface": { "type": "string" },
              "dependencies": { "type": "array", "items": { "type": "string" } },
              "methods": { "type": "array", "items": { "type": "string" } }
            }
          },
          "description": "Generated business logic services"
        },
        "entities": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "path"],
            "properties": {
              "name": { "type": "string" },
              "path": { "type": "string" },
              "properties": { "type": "array", "items": { "type": "string" } },
              "relationships": { "type": "array", "items": { "type": "string" } }
            }
          },
          "description": "Generated Entity Framework entities"
        },
        "dbcontext": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "path": { "type": "string" },
            "dbsets": { "type": "array", "items": { "type": "string" } }
          },
          "description": "Generated Entity Framework DbContext"
        },
        "middleware": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Generated middleware components"
        }
      }
    },
    "code_quality": {
      "type": "object",
      "properties": {
        "compilation_errors": { "type": "integer", "default": 0 },
        "warnings": { "type": "integer" },
        "test_coverage": { "type": "number", "minimum": 0, "maximum": 100 },
        "unit_tests_passing": { "type": "boolean" }
      },
      "description": "Code quality metrics"
    },
    "generated_files": {
      "type": "integer",
      "description": "Total number of .cs files generated"
    },
    "estimated_lines_of_code": {
      "type": "integer",
      "description": "Estimated LOC generated"
    },
    "endpoints_implemented": {
      "type": "integer",
      "description": "Number of API endpoints implemented"
    },
    "next_phase": {
      "type": "string",
      "const": "@database-specialist",
      "description": "Next agent in pipeline"
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "severity": { "type": "string", "enum": ["error", "warning", "info"] },
          "message": { "type": "string" }
        }
      },
      "description": "Any errors or warnings during generation"
    }
  }
}
