{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenticcoder.com/schemas/agents/@database-specialist.input.schema.json",
  "title": "@database-specialist Agent Input Schema",
  "description": "Input contract for the @database-specialist agent (Database Schema Design & Implementation)",
  "type": "object",
  "required": ["source", "phase", "input"],
  "properties": {
    "source": {
      "type": "string",
      "enum": ["@code-architect"],
      "description": "@database-specialist agent is triggered by @code-architect"
    },
    "phase": {
      "type": "integer",
      "const": 15,
      "description": "@database-specialist agent runs in phase 15 (database implementation)"
    },
    "input": {
      "type": "object",
      "required": ["data_models", "database_system"],
      "properties": {
        "data_models": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "properties"],
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "properties": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["name", "type"],
                  "properties": {
                    "name": { "type": "string" },
                    "type": { "type": "string", "enum": ["string", "integer", "decimal", "boolean", "datetime", "uuid", "text", "jsonb"] },
                    "required": { "type": "boolean" },
                    "unique": { "type": "boolean" },
                    "indexed": { "type": "boolean" }
                  }
                }
              },
              "relationships": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "target": { "type": "string" },
                    "type": { "type": "string", "enum": ["1:1", "1:N", "N:N"] },
                    "delete_behavior": { "type": "string", "enum": ["CASCADE", "RESTRICT", "SET_NULL"] }
                  }
                }
              }
            }
          },
          "description": "Data models from code architecture"
        },
        "database_system": {
          "type": "string",
          "enum": ["PostgreSQL", "SQL Server", "MySQL", "SQLite", "MongoDB"],
          "description": "Target database system"
        },
        "constraints": {
          "type": "object",
          "properties": {
            "max_connections": { "type": "integer" },
            "max_table_size": { "type": "string" },
            "performance_requirements": { "type": "string" }
          },
          "description": "Database constraints and performance requirements"
        },
        "security_requirements": {
          "type": "object",
          "properties": {
            "encryption_at_rest": { "type": "boolean" },
            "encryption_in_transit": { "type": "boolean" },
            "row_level_security": { "type": "boolean" },
            "audit_logging": { "type": "boolean" }
          },
          "description": "Security requirements"
        },
        "indexing_strategy": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "table": { "type": "string" },
              "columns": { "type": "array", "items": { "type": "string" } },
              "type": { "type": "string", "enum": ["BTree", "Hash", "GiST"] }
            }
          },
          "description": "Indexing strategy"
        }
      }
    }
  }
}
