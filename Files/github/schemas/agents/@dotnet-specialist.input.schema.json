{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenticcoder.com/schemas/agents/@dotnet-specialist.input.schema.json",
  "title": "@dotnet-specialist Agent Input Schema",
  "description": "Input contract for the @dotnet-specialist agent (.NET Backend Implementation)",
  "type": "object",
  "required": ["source", "phase", "input"],
  "properties": {
    "source": {
      "type": "string",
      "enum": ["@code-architect"],
      "description": "@dotnet-specialist agent is triggered by @code-architect"
    },
    "phase": {
      "type": "integer",
      "const": 14,
      "description": "@dotnet-specialist agent runs in phase 14 (.NET implementation)"
    },
    "input": {
      "type": "object",
      "required": ["backend_architecture", "api_endpoints"],
      "properties": {
        "backend_architecture": {
          "type": "object",
          "required": ["folder_structure", "design_patterns"],
          "properties": {
            "folder_structure": {
              "type": "string",
              "description": "Backend folder structure from @code-architect"
            },
            "design_patterns": {
              "type": "array",
              "items": { "type": "string" },
              "examples": ["Repository Pattern", "Service Pattern", "Factory Pattern", "Dependency Injection"],
              "description": "Design patterns to implement"
            },
            "layer_architecture": {
              "type": "string",
              "enum": ["Layered", "Clean Architecture", "Hexagonal"],
              "description": "Architectural style"
            }
          }
        },
        "api_endpoints": {
          "type": "array",
          "minItems": 1,
          "maxItems": 100,
          "items": {
            "type": "object",
            "required": ["method", "route", "controller"],
            "properties": {
              "method": {
                "type": "string",
                "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"]
              },
              "route": { "type": "string" },
              "controller": { "type": "string" },
              "request_body": { "type": "object" },
              "response_type": { "type": "string" },
              "requires_auth": { "type": "boolean", "default": true },
              "roles": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "description": "API endpoints to implement"
        },
        "data_models": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "properties"],
            "properties": {
              "name": { "type": "string" },
              "properties": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "type": { "type": "string" },
                    "required": { "type": "boolean" }
                  }
                }
              },
              "relationships": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "description": "Entity/Model definitions"
        },
        "authentication": {
          "type": "string",
          "enum": ["JWT", "OAuth2", "API Key", "Windows Auth"],
          "description": "Authentication method"
        },
        "database_context": {
          "type": "string",
          "description": "Database connection string pattern or reference"
        },
        "validation_rules": {
          "type": "object",
          "description": "Business validation rules"
        }
      }
    }
  }
}
