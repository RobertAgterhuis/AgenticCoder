{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Svelte Best Practices Skill Input",
  "description": "Input schema for svelte-best-practices skill",
  "type": "object",
  "properties": {
    "topics": {
      "type": "array",
      "description": "Best practice topics",
      "items": {
        "type": "string",
        "enum": ["performance", "testing", "a11y", "security", "deployment", "optimization"]
      }
    },
    "scope": { "type": "string", "enum": ["component", "application"] }
  },
  "required": ["topics"]
}
