{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Node.js API Patterns Skill Input",
  "description": "Input schema for nodejs-api-patterns skill",
  "type": "object",
  "properties": {
    "patterns": {
      "type": "array",
      "description": "API patterns to demonstrate",
      "items": {
        "type": "string",
        "enum": ["rest", "middleware", "async-await", "error-handling", "validation", "rate-limiting"]
      }
    },
    "framework": { "type": "string" }
  },
  "required": ["patterns"]
}
