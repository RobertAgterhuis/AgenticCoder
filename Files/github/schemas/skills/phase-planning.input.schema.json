{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenticCoder.dev/schemas/skills/phase-planning.input.schema.json",
  "title": "Phase Planning Skill Input",
  "description": "Input schema for phase-planning skill - used by @coordinator for sprint and phase planning",
  "type": "object",
  "required": ["requirements_to_plan", "team_context", "constraints"],
  "properties": {
    "requirements_to_plan": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "requirement_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "priority": {
            "type": "string"
          },
          "estimated_effort": {
            "type": "string"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "team_context": {
      "type": "object",
      "required": ["team_size", "velocity_estimate"],
      "properties": {
        "team_size": {
          "type": "integer",
          "minimum": 1
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "velocity_estimate": {
          "type": "number",
          "description": "Story points per iteration"
        },
        "sprint_duration_weeks": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 4
        },
        "available_hours_per_week": {
          "type": "number"
        }
      }
    },
    "constraints": {
      "type": "object",
      "properties": {
        "timeline_deadline": {
          "type": "string",
          "format": "date"
        },
        "budget_constraint": {
          "type": "string"
        },
        "resource_constraints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dependencies_external": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "planning_scope": {
      "type": "string",
      "enum": ["Single Sprint", "Multi-Sprint", "Phase-based", "Full Project"]
    }
  }
}
