{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenticCoder.dev/schemas/skills/requirements-analysis.input.schema.json",
  "title": "Requirements Analysis Skill Input",
  "description": "Input schema for requirements-analysis skill - used by @doc agent for detailed requirement analysis",
  "type": "object",
  "required": ["raw_requirements", "analysis_scope"],
  "properties": {
    "raw_requirements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "requirement_id": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "source": {
            "type": "string"
          },
          "priority": {
            "type": "string"
          }
        }
      }
    },
    "analysis_scope": {
      "type": "object",
      "properties": {
        "focus_areas": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Functional", "Non-Functional", "Security", "Performance", "Usability", "Accessibility"]
          }
        },
        "stakeholders_involved": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "acceptance_criteria_required": {
          "type": "boolean"
        }
      }
    },
    "context": {
      "type": "object",
      "properties": {
        "project_type": {
          "type": "string"
        },
        "domain": {
          "type": "string"
        },
        "existing_systems": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "analysis_depth": {
      "type": "string",
      "enum": ["Quick Review", "Standard Analysis", "Deep Dive"],
      "description": "Level of analysis detail required"
    }
  }
}
