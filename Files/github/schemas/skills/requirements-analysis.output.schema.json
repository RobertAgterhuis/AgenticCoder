{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenticCoder.dev/schemas/skills/requirements-analysis.output.schema.json",
  "title": "Requirements Analysis Skill Output",
  "description": "Output schema for requirements-analysis skill - analyzed requirements with acceptance criteria",
  "type": "object",
  "required": ["analyzed_requirements", "requirement_summary"],
  "properties": {
    "analyzed_requirements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["requirement_id", "title", "description"],
        "properties": {
          "requirement_id": {
            "type": "string",
            "pattern": "^REQ-[0-9]{4}$"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["Functional", "Non-Functional", "Security", "Performance", "Usability"]
          },
          "priority": {
            "type": "string",
            "enum": ["Critical", "High", "Medium", "Low"]
          },
          "acceptance_criteria": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^REQ-[0-9]{4}$"
            }
          },
          "business_value": {
            "type": "string"
          },
          "technical_notes": {
            "type": "string"
          },
          "estimated_effort": {
            "type": "string",
            "enum": ["XS", "S", "M", "L", "XL"]
          }
        }
      }
    },
    "requirement_summary": {
      "type": "object",
      "properties": {
        "total_requirements": {
          "type": "integer"
        },
        "breakdown_by_type": {
          "type": "object",
          "additionalProperties": {
            "type": "integer"
          }
        },
        "breakdown_by_priority": {
          "type": "object",
          "additionalProperties": {
            "type": "integer"
          }
        }
      }
    },
    "conflicts_and_inconsistencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "issue_id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "affected_requirements": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "recommendation": {
            "type": "string"
          }
        }
      }
    },
    "missing_requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "gap_id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "impact": {
            "type": "string"
          },
          "suggested_requirement": {
            "type": "string"
          }
        }
      }
    },
    "quality_assessment": {
      "type": "object",
      "properties": {
        "completeness_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "clarity_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "consistency_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "overall_quality": {
          "type": "string",
          "enum": ["Excellent", "Good", "Fair", "Poor"]
        },
        "improvement_recommendations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
