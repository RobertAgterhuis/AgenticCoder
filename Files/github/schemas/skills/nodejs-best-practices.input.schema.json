{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Node.js Best Practices Skill Input",
  "description": "Input schema for nodejs-best-practices skill",
  "type": "object",
  "properties": {
    "categories": {
      "type": "array",
      "description": "Best practice categories",
      "items": {
        "type": "string",
        "enum": ["performance", "security", "testing", "error-handling", "deployment", "monitoring"]
      }
    },
    "scale": { "type": "string", "enum": ["startup", "scale", "enterprise"] }
  },
  "required": ["categories"]
}
