{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Svelte Patterns Skill Input",
  "description": "Input schema for svelte-patterns skill",
  "type": "object",
  "properties": {
    "patterns": {
      "type": "array",
      "description": "Svelte patterns to demonstrate",
      "items": {
        "type": "string",
        "enum": ["reactive", "stores", "slots", "bindings", "animations", "transitions", "lifecycle"]
      }
    },
    "complexity": {
      "type": "string",
      "enum": ["basic", "intermediate", "advanced"],
      "description": "Complexity level of examples"
    }
  },
  "required": ["patterns"]
}
