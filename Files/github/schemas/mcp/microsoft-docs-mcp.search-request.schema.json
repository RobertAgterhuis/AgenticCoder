{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenticcoder.com/schemas/mcp/microsoft-docs-mcp.search-request.schema.json",
  "title": "Microsoft Docs MCP - Search Request Schema",
  "description": "Request schema for searching Microsoft documentation",
  "type": "object",
  "required": ["query"],
  "properties": {
    "query": {
      "type": "string",
      "minLength": 2,
      "maxLength": 200,
      "description": "Search query (e.g., 'Azure App Service performance', 'Kubernetes networking')"
    },
    "service": {
      "type": "string",
      "enum": [
        "azure",
        "azure_app_service",
        "azure_sql",
        "azure_cosmos_db",
        "kubernetes",
        "dotnet",
        "python",
        "nodejs",
        "typescript",
        "general"
      ],
      "default": "azure",
      "description": "Service/product to search within"
    },
    "content_type": {
      "type": "string",
      "enum": ["overview", "tutorial", "how-to", "reference", "architecture", "security", "performance", "any"],
      "default": "any",
      "description": "Type of content to prioritize"
    },
    "max_results": {
      "type": "integer",
      "minimum": 1,
      "maximum": 20,
      "default": 5,
      "description": "Maximum number of results to return"
    }
  }
}
