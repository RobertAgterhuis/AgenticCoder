{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ddd-specialist.output.schema.json",
  "title": "DDD Specialist Agent Output Schema",
  "description": "Output schema for the Domain-Driven Design specialist agent",
  "type": "object",
  "required": ["status", "domain_name", "artifacts"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "partial", "failed"],
      "description": "Execution status"
    },
    "domain_name": {
      "type": "string",
      "description": "Domain that was modeled"
    },
    "bounded_context": {
      "type": "string",
      "description": "Primary bounded context"
    },
    "artifacts": {
      "type": "object",
      "description": "Generated DDD artifacts",
      "properties": {
        "value_objects": {
          "type": "array",
          "description": "Generated value objects",
          "items": {
            "type": "object",
            "required": ["name", "file_path"],
            "properties": {
              "name": { "type": "string" },
              "file_path": { "type": "string" },
              "properties": {
                "type": "array",
                "items": { "type": "string" }
              },
              "operations": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "entities": {
          "type": "array",
          "description": "Generated entities",
          "items": {
            "type": "object",
            "required": ["name", "file_path"],
            "properties": {
              "name": { "type": "string" },
              "file_path": { "type": "string" },
              "is_aggregate_root": { "type": "boolean" },
              "properties": {
                "type": "array",
                "items": { "type": "string" }
              },
              "operations": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "aggregates": {
          "type": "array",
          "description": "Generated aggregates",
          "items": {
            "type": "object",
            "required": ["name", "root_entity", "file_path"],
            "properties": {
              "name": { "type": "string" },
              "root_entity": { "type": "string" },
              "file_path": { "type": "string" },
              "child_entities": {
                "type": "array",
                "items": { "type": "string" }
              },
              "invariants": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "domain_events": {
          "type": "array",
          "description": "Generated domain events",
          "items": {
            "type": "object",
            "required": ["name", "file_path"],
            "properties": {
              "name": { "type": "string" },
              "file_path": { "type": "string" },
              "source_aggregate": { "type": "string" },
              "payload_fields": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "repositories": {
          "type": "array",
          "description": "Generated repository interfaces and implementations",
          "items": {
            "type": "object",
            "required": ["interface_name", "aggregate"],
            "properties": {
              "interface_name": { "type": "string" },
              "implementation_name": { "type": "string" },
              "aggregate": { "type": "string" },
              "interface_path": { "type": "string" },
              "implementation_path": { "type": "string" },
              "methods": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "domain_services": {
          "type": "array",
          "description": "Generated domain services",
          "items": {
            "type": "object",
            "required": ["name", "file_path"],
            "properties": {
              "name": { "type": "string" },
              "file_path": { "type": "string" },
              "operations": {
                "type": "array",
                "items": { "type": "string" }
              },
              "dependencies": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "application_services": {
          "type": "array",
          "description": "Generated application services/use cases",
          "items": {
            "type": "object",
            "required": ["name", "file_path"],
            "properties": {
              "name": { "type": "string" },
              "file_path": { "type": "string" },
              "use_case": { "type": "string" },
              "command_or_query": {
                "type": "string",
                "enum": ["command", "query"]
              }
            }
          }
        },
        "tests": {
          "type": "array",
          "description": "Generated test files",
          "items": {
            "type": "object",
            "required": ["name", "file_path", "test_count"],
            "properties": {
              "name": { "type": "string" },
              "file_path": { "type": "string" },
              "test_count": { "type": "integer" },
              "coverage_target": { "type": "string" }
            }
          }
        }
      }
    },
    "context_map": {
      "type": "object",
      "description": "Context mapping information",
      "properties": {
        "upstream": {
          "type": "array",
          "items": { "type": "string" }
        },
        "downstream": {
          "type": "array",
          "items": { "type": "string" }
        },
        "shared_kernel_types": {
          "type": "array",
          "items": { "type": "string" }
        },
        "anti_corruption_layers": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "file_structure": {
      "type": "object",
      "description": "Generated file structure",
      "properties": {
        "domain_layer": {
          "type": "string",
          "description": "Path to domain layer"
        },
        "application_layer": {
          "type": "string",
          "description": "Path to application layer"
        },
        "infrastructure_layer": {
          "type": "string",
          "description": "Path to infrastructure layer"
        }
      }
    },
    "handoff": {
      "type": "object",
      "description": "Handoff information for next agent",
      "properties": {
        "target_agent": {
          "type": "string",
          "description": "Next agent to invoke"
        },
        "reason": {
          "type": "string",
          "description": "Reason for handoff"
        },
        "context": {
          "type": "object",
          "description": "Context to pass to next agent"
        }
      }
    },
    "warnings": {
      "type": "array",
      "description": "Non-critical issues encountered",
      "items": { "type": "string" }
    },
    "errors": {
      "type": "array",
      "description": "Errors encountered during generation",
      "items": {
        "type": "object",
        "properties": {
          "code": { "type": "string" },
          "message": { "type": "string" },
          "location": { "type": "string" }
        }
      }
    }
  }
}
