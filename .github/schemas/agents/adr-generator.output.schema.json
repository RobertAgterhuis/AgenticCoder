{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenticcoder.com/schemas/agents/adr-generator.output.schema.json",
  "type": "object",
  "title": "ADR Generator Output",
  "description": "Generated ADR documents",
  "required": [
    "adrs"
  ],
  "properties": {
    "adrs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "number": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        }
      }
    }
  }
}