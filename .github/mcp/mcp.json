{
  "$schema": "https://json.schemastore.org/mcp-server-config.json",
  "version": "3.0.0",
  "description": "AgenticCoder MCP Server Configuration - Native TypeScript Implementation",
  
  "mcpServers": {
    "azure-pricing-mcp": {
      "type": "native",
      "implementation": "src/mcp/servers/azure/AzurePricingMCPAdapter.ts",
      "timeout": 30000,
      "description": "Real-time Azure pricing data for cost estimation (native TypeScript)",
      "category": "data",
      "tags": ["azure", "pricing", "cost"],
      "healthCheck": {
        "enabled": true,
        "intervalMs": 60000,
        "tool": "ping"
      }
    },
    "azure-resource-graph-mcp": {
      "type": "native",
      "implementation": "src/mcp/servers/azure/AzureResourceGraphMCPAdapter.ts",
      "env": {
        "AZURE_SUBSCRIPTION_ID": "${env:AZURE_SUBSCRIPTION_ID}"
      },
      "timeout": 30000,
      "description": "Azure Resource Graph queries for governance and compliance (native TypeScript)",
      "category": "data",
      "tags": ["azure", "resource-graph", "governance"],
      "healthCheck": {
        "enabled": true,
        "intervalMs": 60000,
        "tool": "ping"
      }
    },
    "microsoft-docs-mcp": {
      "type": "native",
      "implementation": "src/mcp/servers/azure/MicrosoftDocsMCPAdapter.ts",
      "timeout": 30000,
      "description": "Microsoft documentation search for best practices (native TypeScript)",
      "category": "documentation",
      "tags": ["microsoft", "documentation", "best-practices"],
      "healthCheck": {
        "enabled": true,
        "intervalMs": 60000,
        "tool": "ping"
      }
    }
  },

  "defaults": {
    "timeout": 30000,
    "retryPolicy": {
      "maxRetries": 3,
      "initialDelayMs": 1000,
      "maxDelayMs": 30000,
      "backoffMultiplier": 2
    },
    "circuitBreaker": {
      "failureThreshold": 5,
      "resetTimeoutMs": 30000,
      "halfOpenRequests": 3
    }
  },

  "notes": {
    "architecture": "All servers are native TypeScript - no Python subprocess dependency",
    "usage": "Use MCPBridge from src/mcp/bridge.ts for JavaScript agent integration",
    "migration": "Python servers removed in v3.0.0, replaced by native TypeScript adapters"
  }
}
