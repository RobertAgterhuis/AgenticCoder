{
  "name": "AgenticCoder Dev Container",
  
  // Build configuration
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "20"
    }
  },

  // Features (additional dev container features)
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/azure/azure-dev/azd:latest": {}
  },

  // Environment variables
  "containerEnv": {
    "NODE_ENV": "development",
    "AZURE_CORE_USE_CLI": "True"
  },

  // Lifecycle scripts
  "postCreateCommand": "bash .devcontainer/scripts/post-create.sh",
  "postStartCommand": "bash .devcontainer/scripts/post-start.sh",
  "postAttachCommand": "echo 'ðŸš€ AgenticCoder ready!'",

  // VS Code customizations
  "customizations": {
    "vscode": {
      "settings": {
        "typescript.tsdk": "node_modules/typescript/lib",
        "typescript.enablePromptUseWorkspaceTsdk": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "files.exclude": {
          "**/node_modules": true,
          "**/dist": false,
          "**/.git": true
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "azureFunctions.projectLanguage": "TypeScript",
        "azureFunctions.projectRuntime": "~4"
      },
      
      "extensions": [
        "ms-azuretools.vscode-azurefunctions",
        "ms-azuretools.vscode-azureresourcegroups",
        "ms-azuretools.vscode-bicep",
        "ms-azuretools.azure-dev",
        "ms-azuretools.vscode-azurecli",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "github.vscode-pull-request-github",
        "github.copilot",
        "github.copilot-chat",
        "vitest.explorer",
        "yzhang.markdown-all-in-one",
        "bierner.markdown-mermaid",
        "streetsidesoftware.code-spell-checker",
        "editorconfig.editorconfig"
      ]
    }
  },

  // Port forwarding
  "forwardPorts": [3000, 3001, 3002, 7071, 5000],
  "portsAttributes": {
    "3000": { "label": "Dev Server", "onAutoForward": "notify" },
    "3001": { "label": "API Server", "onAutoForward": "silent" },
    "3002": { "label": "MCP Server", "onAutoForward": "silent" },
    "7071": { "label": "Azure Functions", "onAutoForward": "notify" },
    "5000": { "label": "Python MCP", "onAutoForward": "silent" }
  },

  // Mounts
  "mounts": [
    "source=agentic-npm-cache,target=/home/vscode/.npm,type=volume",
    "source=agentic-azure-config,target=/home/vscode/.azure,type=volume",
    "source=agentic-vscode-extensions,target=/home/vscode/.vscode-server/extensions,type=volume"
  ],

  // User configuration
  "remoteUser": "vscode",
  
  // Workspace folder
  "workspaceFolder": "/workspaces/AgenticCoder",
  
  // Shut down action
  "shutdownAction": "stopContainer"
}