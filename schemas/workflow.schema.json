{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agenticcoder.io/schemas/workflow.schema.json",
  "title": "Workflow Definition Schema",
  "description": "Schema for defining AgenticCoder workflows",
  "type": "object",
  "required": ["id", "name", "version", "steps"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique workflow identifier"
    },
    "name": {
      "type": "string",
      "description": "Human-readable workflow name"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string"
    },
    "inputs": {
      "type": "object",
      "description": "Workflow input parameters"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "agentId"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Step identifier"
          },
          "agentId": {
            "type": "string",
            "description": "Agent to execute"
          },
          "dependsOn": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Step IDs this depends on"
          },
          "inputs": {
            "type": "object",
            "description": "Static inputs or references to previous step outputs"
          },
          "condition": {
            "type": "string",
            "description": "JavaScript expression to conditionally execute step"
          },
          "retryOnFailure": {
            "type": "boolean",
            "default": false
          },
          "continueOnError": {
            "type": "boolean",
            "default": false
          }
        }
      }
    },
    "outputs": {
      "type": "object",
      "description": "Workflow output mapping from step outputs"
    },
    "errorHandling": {
      "type": "object",
      "properties": {
        "onError": {
          "type": "string",
          "enum": ["stop", "continue", "retry"]
        },
        "maxRetries": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
