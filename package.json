{
  "name": "agentic-coder",
  "version": "1.0.0",
  "description": "Agentic Coder - MCP-powered coding agent framework",
  "main": "dist/index.js",
  "bin": {
    "agentic": "./bin/agentic.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node bin/agentic.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
