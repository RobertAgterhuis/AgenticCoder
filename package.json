    "test:all": "npm run test && npm run test:e2e"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@azure/arm-resources-subscriptions": "^2.1.0",
    "@azure/arm-subscriptions": "^6.0.0",
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "chalk": "^4.1.2",
    "commander": "^14.0.2"
  }
}
